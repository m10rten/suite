{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES6",

    "paths": {
      "@mvdlei/ui/*": ["../../packages/internal/ui/*"],
      "@mvdlei/ui/components/*": ["../../packages/internal/ui/components/ui/*"],
      "@mvdlei/ui/components/ui/*": ["../../packages/internal/ui/components/ui/*"]
    }
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
