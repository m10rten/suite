{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true,
      "persistent": false
    },
    "lint": {
      "cache": true,
      "persistent": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": true,
      "persistent": false
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true,
      "persistent": false
    },
    "typecheck": {
      "cache": true,
      "persistent": false
    },
    "generate": {
      "dependsOn": ["^build", "^generate"],
      "cache": true,
      "persistent": false
    },
    "cli": {
      "cache": true,
      "persistent": true
    }
  }
}
